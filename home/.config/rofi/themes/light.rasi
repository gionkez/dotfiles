* {
    background-color: #f9f9f9;
    text-color: #000000;
    highlight: underline bold #000000;
    margin: 2;
    padding: 0;
    spacing: 0;
}

window {
    width: 20%;
}

message {
    border: 2px;
    border-color: #000000;
}

listview {
    scrollbar: false;
    lines: 5;
    columns: 1;
}

element {
    padding: 1px;
}

element selected {
    background-color: #c0c0c0;
    border: 1px;
}

element-text {
    background-color: inherit;
}
